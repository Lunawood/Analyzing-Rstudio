AndrewMap <- gvisMap(Andrew, "LatLong" , "Tip", 
                     options=list(showTip=TRUE, 
                                  showLine=TRUE, 
                                  enableScrollWheel=TRUE, 
                                  mapType='terrain', 
                                  useMapTypeControl=TRUE)) 

plot(AndrewMap)
