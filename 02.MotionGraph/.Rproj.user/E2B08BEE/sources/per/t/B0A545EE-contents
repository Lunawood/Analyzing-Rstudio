library(googleVis)
#Æ¯Á¤?? ????À» ??Á¶?Ï´? ??À» ??????.
df=data.frame(country=c("US", "GB", "BR"), 
              val1=c(1,3,4), val2=c(23,12,32))
Intensity <- gvisIntensityMap(df)
plot(Intensity)
# geo chart
Exports
Geo=gvisGeoChart(Exports, locationvar="Country", 
                 colorvar="Profit", 
                 options=list(projection="kavrayskiy-vii"))
plot(Geo)
